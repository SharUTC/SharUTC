<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<VBox id="gridPane" GridPane.hgrow="ALWAYS"
      GridPane.vgrow="ALWAYS" xmlns:fx="http://javafx.com/fxml"
      fx:controller="fr.utc.lo23.sharutc.ui.SongListController">

    <BorderPane>
        <left>
            <Label text="Manage your song list" styleClass="panetitle"/>
        </left>
        <right>
            <Button fx:id="addNewSongButton" styleClass="rectButton,bgBlue" text="add a song"
                    BorderPane.alignment="CENTER_RIGHT">
                <font>
                    <Font size="12.0"/>
                </font>
            </Button>
        </right>
    </BorderPane>

    <ScrollPane xmlns:fx="http://javafx.com/fxml" styleClass="myScrollPane"
                VBox.vgrow="ALWAYS" fitToWidth="true" fitToHeight="true">

        <FlowPane fx:id="songsContainer"
                  GridPane.hgrow="ALWAYS"
                  GridPane.vgrow="ALWAYS"
                  prefHeight="-1.0" prefWidth="-1.0"
                  prefWrapLength="230.0" vgap="10.0"
                  hgap="10.0">
            <padding>
                <javafx.geometry.Insets bottom="5" left="5" right="5" top="5"/>
            </padding>
        </FlowPane>

    </ScrollPane>
</VBox>


